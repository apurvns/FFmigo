/* Modern T3.chat-inspired dark theme */
QWidget {
    background: #18141d;
    color: #e6eaf3;
    font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
    font-size: 16px;
    border: none;
}



#ProjectSidebar {
    background: #120e17;
    border: none;
    border-top-left-radius: 24px;
    border-bottom-left-radius: 24px;
    padding-top: 16px;
    border-right: 2px solid #3a2e4a;
}
#ProjectList {
    background: transparent;
    border: none;
}
#ProjectList::item {
    padding: 14px 22px;
    border-radius: 14px;
    margin: 4px 0;
    font-size: 16px;
    color: #b6b1c9;
}
#ProjectList::item:selected {
    background: #2d1e3a;
    color: #fff;
    border-radius: 0px;
}
#ProjectListItemMenuButton {
    background: transparent;
    color: #b6b1c9;
    border: none;
    border-radius: 14px;
    min-width: 28px;
    min-height: 28px;
    max-width: 28px;
    max-height: 28px;
    padding: 0;
    margin: 0 0 0 8px;
    font-size: 20px;
    vertical-align: middle;
}
#ProjectListItemMenuButton:hover {
    background: #2d1e3a;
    color: #fff;
}


QSplitter::handle {
    background: #3a2e4a;
    width: 3px;
    margin: 0 2px;
}

QSplitter::handle:hover {
    background: #a259ff;
}

#ActionSeparator {
    background: #3a2e4a;
    border: none;
    margin: 8px 0;
}

#NewProjectButton {
    background: transparent !important;
    border: 2px solid #5a4e6a !important;
    color: #fff;
    border-radius: 10px;
    padding: 8px 16px;
    margin: 0 8px;
    font-size: 17px;
    font-weight: 600;
    min-width: 120px;
    text-align: center;
}
#NewProjectButton:hover {
    background: #b366ff;
    color: #fff;
}
#NewProjectButton:pressed {
    background: #8b4dff;
}

#SettingsButton, #ReopenButton, #PlayPauseButton, #FullscreenButton {
    background: #2d1e3a;
    color: #fff;
    border: none;
    border-radius: 18px;
    padding: 10px 28px;
    margin: 0 8px;
    font-size: 16px;
    font-weight: 500;
    min-width: 90px;
}
#SettingsButton:hover, #ReopenButton:hover, #PlayPauseButton:hover, #FullscreenButton:hover {
    background: #a259ff;
    color: #fff;
}

#DragDropArea {
    background: #221a2c;
    border-radius: 24px;
    border: none;
    margin: 32px 0 32px 0;
}
#DragDropIcon {
    margin-bottom: 18px;
    font-size: 46px;
    color: #a259ff;
    background: transparent;
}
#DragDropText {
    color: #e6eaf3;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    background: transparent;
}

/* New Project + About content moved from inline */
#ProjectNameLabel {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
    color: #e6eaf3;
}
#NewProjectTitle {
    font-size: 36px;
    font-weight: 800;
    color: #e6eaf3;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
}
#NewProjectSubtitle {
    font-size: 16px;
    color: #888888;
    font-weight: 400;
}
#OptionHeader {
    font-size: 20px;
    font-weight: 700;
    color: #e6eaf3;
    margin-bottom: 8px;
}
#OptionDescription {
    font-size: 14px;
    color: #888888;
    text-align: center;
    background: transparent;
}
#FormatsLabel, #YouTubeInfo {
    font-size: 12px;
    color: #666666;
    text-align: center;
    margin-top: 8px;
}
#DragDropSubtext {
    font-size: 14px;
    color: #888888;
    text-align: center;
    background: transparent;
}

/* YouTube icon and inputs */
#YouTubeIcon {
    background-color: red;
    border-radius: 10px;
    color: white;
    font-size: 28px;
    padding: 10px 10px;
    margin: 0;
}
#YouTubeInputContainer {
    background: transparent;
}
#YouTubeUrlInput {
    background-color: #2d1e3a;
    border: 2px solid #444444;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 14px;
    color: #e6eaf3;
    min-height: 20px;
}
#YouTubeUrlInput:focus {
    border-color: #a259ff;
}
#YouTubeUrlInput::placeholder {
    color: #888888;
}
#YouTubeProgressBar {
    border: 2px solid #444444;
    border-radius: 6px;
    text-align: center;
    background-color: #2d1e3a;
    color: #e6eaf3;
    font-size: 12px;
    font-weight: 600;
}
#YouTubeProgressBar::chunk {
    background-color: #a259ff;
    border-radius: 4px;
}

/* New Project Layout Styles */
#NewProjectContainer {
    background: transparent;
    border: none;
    margin: 0;
    padding: 0;
}

#DragDropColumn, #YouTubeColumn {
    /*background: #221a2c;
    border: 2px solid #3a2e4a;
    border-radius: 20px;*/
