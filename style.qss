}

/* Video Player Container */
#VideoPlayerContainer {
    background: #18141d;
    border: none;
    margin: 0;
    padding: 0;
}

#VideoWidget {
    background: #000000;
    border: none;
    border-radius: 8px;
    margin: 0;
    padding: 0;
}

#MediaControls {
    background: transparent;
    border: none;
    margin: 8px 0 0 0;
    padding: 0;
}

/* Terminal Container */
#TerminalContainer {
    background: transparent;
    border: none;
    margin: 0;
    padding: 0;
}

#ActionButtons {
    background: transparent;
    border: none;
    margin: 0;
    padding: 0;
}

#ChatLog {
    background: transparent;
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 12px;
    font-family: 'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace;
    font-size: 13px;
